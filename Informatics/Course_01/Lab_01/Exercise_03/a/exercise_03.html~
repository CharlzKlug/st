<body>
  <head>
    <link rel=stylesheet type="text/css" href="1.css">
    <meta charset = "utf-8">
  </head>
  <script>
    var n=10; var s;
    document.write("<table>");

      for (i=1; i<=n; i = i + 1)
		      {
		      document.write("<tr>")

		      for (j=1; j<=n; j=j+1)
				      {
				      st=(i+j)%2
				      if (st==0) s="class='r1'";
				      else s="class='r2'";
				      document.write("<td "+s+"> </td>");
				      }
				      document.write("</tr>");
				      }
				      document.write("</table>");
  </script>
</body>
